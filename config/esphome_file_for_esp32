  min_version: 2024.6.0
  name_add_mac_suffix: false
  project:
    name: esphome.web
    version: dev

  on_boot:
    priority: -100
    then:
    #- switch.turn_off: relay
    #- if:
    #    condition:
    #      lambda: |-
    #        return id(isrelayON) == true ;
    #    then:   
    #      - logger.log: "var: true, accendo relay"
         # - switch.turn_on: relay
